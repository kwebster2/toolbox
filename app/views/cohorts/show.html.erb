    <h4>Recent additions:</h4>
    <% @cohort.categories.each do |c| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="list-group-item active">
          <h1 class="panel-title block-title"><%= link_to c.name, cohort_category_path(@cohort.slug, c.slug) %></h1>
        </div>
        <div class="panel-body">
            <% c.resources.limit(5).each do |r| %>
            <a href="<% link_to %>" class="list-group-item">
              <span class="badge">[save]</span>
              <h4 class="list-group-item-heading"><%= r.name %></h4>
              <p class="list-group-item-text"><%= r.short_description %></p>
            </a>
            <% end %>
        </div>
        <div class="more-link">
          <%= link_to "More", cohort_category_path(@cohort.slug, c.slug) %>
        </div>
      </div>
    </div>
      <% end %>
  </div>
</div>